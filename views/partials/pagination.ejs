 
  <nav class="d-flex justify-content-end" aria-label="Page navigation">
    <ul class="pagination" id="custom-pagination">
        <% if (currentPage !== 1) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= 1 %>" title="first page">First</a></li>
        <% } %>

        <% if (hasPrevPage) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= prevPage %>" title="previous page"><%= prevPage %></a></li>
        <% } %>

        <li class="page-item"><a class="page-link active-page" href="?page=<%= currentPage %>" title="current page"><%= currentPage %></a></li>

      <% if (hasNextPage) { %>
        <li class="page-item"><a class="page-link" href="?page=<%= nextPage %>" title="next page"><%= nextPage %></a></li>
    <% } %>

      <% if (hasNextPage && nextPage !== lastPage) { %>
        <li class="page-item"><a class="page-link" href="?page=<%= lastPage %>" title="last page">Last</a></li>
      <% } %>
    </ul>
  </nav>